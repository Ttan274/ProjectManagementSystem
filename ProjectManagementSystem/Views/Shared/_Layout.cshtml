<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProTrack</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="wrapper">
        <aside id="sidebar" class="active">
            <div class="sidebar-header">
                <div class="logo-container">
                    <i class="bi bi-kanban-fill logo-icon"></i>
                    <h3 class="logo-text">Pro<span>Track</span></h3>
                </div>
                <button id="sidebarCollapse" class="toggle-btn">
                    <i class="bi bi-chevron-left"></i>
                </button>
            </div>

            <div class="sidebar-menu">
                <ul class="menu-items">
                    <li class="active">
                        <a href="#">
                            <i class="bi bi-house-door"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="bi bi-kanban"></i>
                            <span>Projects</span>
                            <i class="bi bi-chevron-right dropdown-icon"></i>
                        </a>
                        <ul class="submenu">
                            <li><a href="#"><i class="bi bi-grid"></i> All Projects</a></li>
                            <li><a href="#"><i class="bi bi-plus-circle"></i> Create New</a></li>
                            <li><a href="#"><i class="bi bi-collection"></i> Templates</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="#">
                            <i class="bi bi-card-checklist"></i>
                            <span>Tasks</span>
                            <span class="badge bg-primary">12</span>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="bi bi-calendar-week"></i>
                            <span>Sprints</span>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="bi bi-people"></i>
                            <span>Team</span>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="bi bi-pie-chart"></i>
                            <span>Reports</span>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="bi bi-gear"></i>
                            <span>Settings</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="User" asp-action="AdminPage">
                            <i class="bi bi-person"></i>
                            <span>Admin</span>
                        </a>
                    </li>
                </ul>
            </div>
        </aside>

        <main id="content">
            <header class="main-header">
                <div class="header-left">
                    <div class="search-container">
                        <i class="bi bi-search search-icon"></i>
                        <input type="text" placeholder="Search projects, tasks..." class="search-input">
                    </div>
                </div>
                <div class="header-right">
                    <div class="header-actions">
                        <div class="user-dropdown">
                            <img src="" alt="User" class="user-avatar">
                            <span class="user-name">@(User?.FindFirst("UserName")?.Value ?? "Unknown User")</span>
                            <i class="bi bi-chevron-down"></i>
                        </div>
                    </div>
                </div>
            </header>

            <div class="content-container">
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>