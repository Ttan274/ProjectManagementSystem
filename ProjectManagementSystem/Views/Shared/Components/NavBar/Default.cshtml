@model Navbar

<aside class="sidebar">
    <h2 class="txt-center">@Model.MainTitle</h2>
    <hr style="border-top: 1px solid #ccc;" />
    <ul class="custom-menu-elements">
        @foreach(var item in Model.NavbarItems)
        {
            if (string.IsNullOrEmpty(item.ElementId)) 
            {
                <li><a asp-action="@item.Action" asp-controller="@item.Controller">@item.Title</a></li>
            }
            else
            {
                <li><a class="button" id="@item.ElementId">Go To Board</a></li>
            }
        }
    </ul>

    <ul class="custom-menu-elements mt-5">
        <h5>Applications</h5>
        @foreach(var project in Model.Projects)
        {
            <li><a asp-action="Index" asp-controller="AppInfo" asp-route-projectId="@project.Id">@project.ProjectName</a></li>
        }
    </ul>
</aside>