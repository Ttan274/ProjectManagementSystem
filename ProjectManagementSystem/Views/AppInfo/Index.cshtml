@model ProjectManagementSystem.Application.Abstractions.AppInfo.Dto.AppProjectInfoDto

@{
    Layout = "_MainLayout";
    ViewData["Title"] = "Project Applications";
}

<script src="~/js/appInfo.js" asp-append-version="true"></script>

<main class="content">
    <div class="header">

    </div>

    <div class="overview">
        <div class="card">
            <h3>Project Details</h3>
            <p><strong>@Model.Project.ProjectName</strong></p>
            <small>@(Model.Project.Team?.TeamName ?? "Team is not found")</small>
        </div>
        <div class="card">
            <h3>Applications</h3>
            <p><strong>@Model.AppInfos.Count</strong></p>
            <small>Number of Applications</small>
        </div>
    </div>

    <div class="projects-section">
        <h3>Project Details</h3>
        <div class="project-info">
            <p><strong>Description:</strong> @Model.Project.ProjectDesc</p>
            <p><strong>Priority:</strong> @(Model.Project.Priority?.ToString() ?? "Not specified")</p>
            <p><strong>Created At:</strong> @Model.Project.CreatedDate.ToString("dd MMMM yyyy")</p>
        </div>
    </div>

    <partial model="Model.AppInfos" name="_DataGrid" />
</main>

<div class="modal fade" id="appInfoModal" aria-hidden="true" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="appInfoModalLabel">Application Info</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="appInfoModalBody">
                
            </div>
        </div>
    </div>
</div>