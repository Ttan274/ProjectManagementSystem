@model ProjectManagementSystem.Application.Abstractions.AppInfo.Dto.CreateAppInfoDto

@{
    Layout = null;
}

<form id="appInfoForm">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name">
    </div>
    <div class="mb-3">
        <label for="Description" class="form-label">Description</label>
        <textarea class="form-control" id="Description" name="Description">@Model.Description</textarea>
    </div>
    <div class="mb-3">
        <label for="appCode" class="form-label">App Code</label>
        <input type="number" class="form-control" id="AppCode" name="AppCode" value="@Model.AppCode">
    </div>
    <div class="mb-3">
        <label for="gitHubPatToken" class="form-label">GitHub PAT Token</label>
        <input type="text" class="form-control" id="GitHubPatToken" name="GitHubPatToken" value="@Model.GitHubPatToken">
    </div>
    <div class="mb-3">
        <label for="gitHubOwner" class="form-label">GitHub Owner</label>
        <input type="text" class="form-control" id="GitHubOwner" name="GitHubOwner" value="@Model.GitHubOwner">
    </div>
    <div class="mb-3">
        <label for="gitHubRepo" class="form-label">GitHub Repo</label>
        <input type="text" class="form-control" id="GitHubRepo" name="GitHubRepo" value="@Model.GitHubRepo">
    </div>
    <div class="mb-3">
        <label for="decommissionDate" class="form-label">Decommission Date</label>
        <input type="date" class="form-control" id="DecommissionDate" name="DecommissionDate"
               value="@(Model.DecommissionDate.HasValue ? Model.DecommissionDate.Value.ToString("yyyy-MM-dd") : "")">
    </div>
    <div class="mb-3 d-none">
        <input type="text" class="form-control" id="ProjectId" value="@Model.ProjectId" name="ProjectId">
        <input type="text" class="form-control" id="Id" value="@Model.Id" name="Id">
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" onclick="submitAppInfoForm()">@(Model.Id == Guid.Empty ? "Create" : "Update")</button>
    </div>
</form>

<script>
    $(document).ready(function(){
        $('#appInfoForm').on('submit', function (e) {
          e.preventDefault();
          submitAppInfoForm();
        });
    });
</script>